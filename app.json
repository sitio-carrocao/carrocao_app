{
  "expo": {
    "name": "carrocao_app",
    "slug": "carrocao_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "carrocaoapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.carrocao-app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.carrocao_app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": ["./src/assets/fonts"],
          "android": {
            "fonts": [
              {
                "fontFamily": "Raleway",
                "fontDefinitions": [
                  {
                    "path": "./src/assets/fonts/Raleway-Bold.ttf",
                    "weight": 700
                  },
                  {
                    "path": "./src/assets/fonts/Raleway-SemiBold.ttf",
                    "weight": 600
                  },
                  {
                    "path": "./src/assets/fonts/Raleway-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./src/assets/fonts/Raleway-Regular.ttf",
                    "weight": 400
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permitir que $(PRODUCT_NAME) acesse sua galeria de imagens.",
          "cameraPermission": "Permitir que $(PRODUCT_NAME) acesse sua c√¢mera."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
