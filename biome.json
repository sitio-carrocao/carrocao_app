{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignore": ["node_modules"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },

  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "off",
        "useImportType": {
          "fix": "safe",
          "level": "error"
        }
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "info"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "lineEnding": "lf",
      "indentWidth": 2,
      "bracketSameLine": true,
      "bracketSpacing": true
    }
  },
  "overrides": [
    {
      "include": ["./src/http/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "info"
          },
          "complexity": {
            "useLiteralKeys": "info"
          }
        }
      }
    }
  ]
}
